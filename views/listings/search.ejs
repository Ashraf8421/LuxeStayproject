<% layout("/layouts/boilerplate") %>

<div id="filters">
  <div class="filter">
    <a href="/listings/category/Trending">
      <button class="filterbtn" type="button"><i class="fa-solid fa-fire"></i></button>
      <p>Trending</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Rooms">
      <button class="filterbtn" type="button"><i class="fa-solid fa-bed"></i></button>
      <p>Rooms</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Iconic Cities">
      <button class="filterbtn" type="button"><i class="fa-solid fa-mountain-city"></i></button>
      <p>Iconic Cities</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Mountains">
      <button class="filterbtn" type="button"><i class="fa-solid fa-mountain"></i></button>
      <p>Mountains</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Castles">
      <button class="filterbtn" type="button"><i class="fa-brands fa-fort-awesome"></i></button>
      <p>Castles</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Amazing Pools">
      <button class="filterbtn" type="button"><i class="fa-solid fa-person-swimming"></i></button>
      <p>Amazing Pools</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Camping">
      <button class="filterbtn" type="button"><i class="fa-solid fa-campground"></i></button>
      <p>Camping</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Farms">
      <button class="filterbtn" type="button"><i class="fa-solid fa-cow"></i></button>
      <p>Farms</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Arctic">
      <button class="filterbtn" type="button"><i class="fa-solid fa-snowflake"></i></button>
      <p>Arctic</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Domes">
      <button class="filterbtn" type="button"><i class="fa-solid fa-igloo"></i></button>
      <p>Domes</p>
    </a>
  </div>
  <div class="filter">
    <a href="/listings/category/Boats">
      <button class="filterbtn" type="button"><i class="fa-solid fa-ship"></i></button>
      <p>Boats</p>
    </a>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Displat total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of placeListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %> </b><br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
    <% } %>
  </a>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
    }
  });
</script>
